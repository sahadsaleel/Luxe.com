<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Order Success - Luxe Fashion Store</title>
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" rel="stylesheet">
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jspdf/2.5.1/jspdf.umd.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jspdf-autotable/3.5.28/jspdf.plugin.autotable.min.js"></script>
    <style>
        :root {
            --primary-color: #046A38;
            --secondary-color: #C4B7A6;
            --accent-color: #B3A580;
            --text-color: #2d3436;
            --light-text: #6c757d;
            --background: #f8f9fa;
            --card-bg: #ffffff;
            --border-radius: 12px;
            --box-shadow: 0 2px 8px rgba(0,0,0,0.1);
        }

        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        }

        body {
            background-color: var(--background);
            color: var(--text-color);
            line-height: 1.6;
        }

        .container {
            max-width: 1200px;
            margin: 0 auto;
            padding: 40px 20px;
        }

        .success-section {
            text-align: center;
            background-color: var(--card-bg);
            border-radius: var(--border-radius);
            box-shadow: var(--box-shadow);
            padding: 40px;
            margin-top: 30px;
        }

        .success-icon {
            width: 120px;
            height: 120px;
            background-color: rgba(4, 106, 56, 0.1);
            border-radius: 50%;
            display: flex;
            align-items: center;
            justify-content: center;
            margin: 0 auto 30px;
        }

        .success-icon i {
            font-size: 48px;
            color: var(--primary-color);
        }

        .success-title {
            font-size: 32px;
            font-weight: 700;
            color: var(--primary-color);
            margin-bottom: 15px;
        }

        .success-message {
            font-size: 18px;
            color: var(--light-text);
            margin-bottom: 30px;
        }

        .order-info {
            background-color: rgba(4, 106, 56, 0.05);
            border-radius: var(--border-radius);
            padding: 20px;
            margin-bottom: 30px;
            display: inline-block;
        }

        .order-id {
            font-size: 16px;
            color: var(--text-color);
            display: flex;
            align-items: center;
            justify-content: center;
            gap: 10px;
        }

        .order-id span {
            font-weight: 600;
            color: var(--primary-color);
        }

        .copy-button {
            background: none;
            border: none;
            color: var(--light-text);
            cursor: pointer;
            padding: 5px;
            transition: all 0.3s ease;
        }

        .copy-button:hover {
            color: var(--primary-color);
        }

        .button-group {
            display: flex;
            flex-direction: column;
            gap: 15px;
            max-width: 300px;
            margin: 0 auto;
        }

        .btn {
            padding: 12px 24px;
            border-radius: 8px;
            font-size: 16px;
            font-weight: 600;
            text-decoration: none;
            text-align: center;
            transition: all 0.3s ease;
            cursor: pointer;
        }

        .btn-primary {
            background-color: var(--primary-color);
            color: white;
            border: none;
        }

        .btn-primary:hover {
            background-color: #035c31;
        }

        .btn-secondary {
            background-color: transparent;
            color: var(--primary-color);
            border: 2px solid var(--primary-color);
        }

        .btn-secondary:hover {
            background-color: rgba(4, 106, 56, 0.1);
        }

        .btn-link {
            background: none;
            border: none;
            color: var(--light-text);
            text-decoration: underline;
        }

        .btn-link:hover {
            color: var(--primary-color);
        }

        /* Invoice Modal Styles */
        .modal {
            display: none;
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background-color: rgba(0, 0, 0, 0.5);
            align-items: center;
            justify-content: center;
            z-index: 1000;
        }

        .modal-content {
            background-color: var(--card-bg);
            border-radius: var(--border-radius);
            box-shadow: var(--box-shadow);
            width: 90%;
            max-width: 600px;
            max-height: 90vh;
            overflow-y: auto;
            position: relative;
        }

        .modal-header {
            padding: 20px;
            border-bottom: 1px solid #eaeaea;
        }

        .modal-header h3 {
            font-size: 20px;
            color: var(--text-color);
            margin: 0;
        }

        .close-modal {
            position: absolute;
            top: 20px;
            right: 20px;
            font-size: 24px;
            color: var(--light-text);
            cursor: pointer;
            background: none;
            border: none;
        }

        .close-modal:hover {
            color: var(--text-color);
        }

        .modal-body {
            padding: 20px;
        }

        .invoice-details {
            margin-bottom: 20px;
        }

        .invoice-table {
            width: 100%;
            border-collapse: collapse;
            margin: 20px 0;
        }

        .invoice-table th,
        .invoice-table td {
            padding: 12px;
            text-align: left;
            border-bottom: 1px solid #eaeaea;
        }

        .invoice-table th {
            background-color: rgba(4, 106, 56, 0.05);
            font-weight: 600;
        }

        .modal-footer {
            padding: 20px;
            border-top: 1px solid #eaeaea;
            text-align: right;
        }

        .copy-notification {
            position: fixed;
            top: 20px;
            right: 20px;
            background-color: var(--primary-color);
            color: white;
            padding: 10px 20px;
            border-radius: 4px;
            display: none;
            z-index: 1001;
        }

        @media (max-width: 768px) {
            .container {
                padding: 20px;
            }

            .success-section {
                padding: 30px 20px;
            }

            .success-icon {
                width: 100px;
                height: 100px;
            }

            .success-icon i {
                font-size: 40px;
            }

            .success-title {
                font-size: 24px;
            }

            .success-message {
                font-size: 16px;
            }

            .button-group {
                max-width: 100%;
            }
        }
    </style>
</head>
<body>
    <%- include('../../views/partials/user/header') %>

    <div class="container">
        <div class="success-section">
            <div class="success-icon">
                <i class="fas fa-check"></i>
            </div>
            <h1 class="success-title">Order Successful!</h1>
            <p class="success-message">Thank you for shopping with Luxe Store</p>
            
            <div class="order-info">
                <p class="order-id">
                    Order ID: <span><%= order.customOrderId %></span>
                    <button class="copy-button" onclick="copyOrderId('<%= order.customOrderId %>')">
                        <i class="fas fa-copy"></i>
                    </button>
                </p>
            </div>

            <div class="button-group">
                <a href="/orders" class="btn btn-primary">
                    <i class="fas fa-shopping-bag"></i> View Order
                </a>
                <button onclick="openModal()" class="btn btn-secondary">
                    <i class="fas fa-file-invoice"></i> View E-Receipt
                </button>
                <a href="/review/<%= order._id %>" class="btn btn-link">
                    <i class="fas fa-star"></i> Write a Review
                </a>
            </div>
        </div>
    </div>

    <!-- Invoice Modal -->
    <div id="invoiceModal" class="modal">
        <div class="modal-content">
            <div class="modal-header">
                <h3>Order Invoice</h3>
                <button class="close-modal" onclick="closeModal()">×</button>
            </div>
            <div class="modal-body">
                <div class="invoice-details">
                    <p><strong>Order ID:</strong> <%= order.customOrderId %></p>
                    <p><strong>Date:</strong> <%= order.orderDate %></p>
                    <p><strong>Time:</strong> <%= new Date(order.createdOn).toLocaleTimeString() %></p>
                </div>

                <table class="invoice-table">
                    <thead>
                        <tr>
                            <th>Item</th>
                            <th>Quantity</th>
                            <th>Price</th>
                            <th>Total</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% order.items.forEach(item => { %>
                            <tr>
                                <td><%= item.productName || 'Product' %></td>
                                <td><%= item.quantity %></td>
                                <td>₹<%= item.price.toFixed(2) %></td>
                                <td>₹<%= item.totalPrice.toFixed(2) %></td>
                            </tr>
                        <% }) %>
                        <tr>
                            <td colspan="3"><strong>Subtotal</strong></td>
                            <td><strong>₹<%= order.subtotal.toFixed(2) %></strong></td>
                        </tr>
                        <% if (order.giftWrapTotal > 0) { %>
                            <tr>
                                <td colspan="3">Gift Wrap Charges</td>
                                <td>₹<%= order.giftWrapTotal.toFixed(2) %></td>
                            </tr>
                        <% } %>
                        <% if (order.shipping > 0) { %>
                            <tr>
                                <td colspan="3">Shipping</td>
                                <td>₹<%= order.shipping.toFixed(2) %></td>
                            </tr>
                        <% } %>
                        <% if (order.discount > 0) { %>
                            <tr>
                                <td colspan="3">Discount</td>
                                <td>-₹<%= order.discount.toFixed(2) %></td>
                            </tr>
                        <% } %>
                        <tr>
                            <td colspan="3"><strong>Total Amount</strong></td>
                            <td><strong>₹<%= order.finalAmount.toFixed(2) %></strong></td>
                        </tr>
                    </tbody>
                </table>

                <div class="shipping-details">
                    <h4>Shipping Address</h4>
                    <p><%= order.address.name %></p>
                    <p><%= order.address.landMark %></p>
                    <p><%= order.address.city %>, <%= order.address.state %> <%= order.address.pincode %></p>
                    <p>Phone: <%= order.address.phone %></p>
                    <% if (order.address.altPhone) { %>
                        <p>Alt Phone: <%= order.address.altPhone %></p>
                    <% } %>
                </div>
            </div>
            <div class="modal-footer">
                <button class="btn btn-primary" onclick="downloadInvoice()">
                    <i class="fas fa-download"></i> Download Invoice
                </button>
            </div>
        </div>
    </div>

    <div id="copyNotification" class="copy-notification">
        Order ID copied to clipboard!
    </div>

    <%- include('../../views/partials/user/footer') %>

    <script>
        function copyOrderId(orderId) {
            navigator.clipboard.writeText(orderId).then(() => {
                const notification = document.getElementById('copyNotification');
                notification.style.display = 'block';
                setTimeout(() => {
                    notification.style.display = 'none';
                }, 2000);
            });
        }

        function openModal() {
            document.getElementById('invoiceModal').style.display = 'flex';
        }

        function closeModal() {
            document.getElementById('invoiceModal').style.display = 'none';
        }

        window.onclick = function(event) {
            const modal = document.getElementById('invoiceModal');
            if (event.target === modal) {
                modal.style.display = 'none';
            }
        }

        async function downloadInvoice() {
            try {
                const { jsPDF } = window.jspdf;
                const doc = new jsPDF();

                // Add company logo/header
                doc.setFontSize(24);
                doc.setTextColor(4, 106, 56);
                doc.text('LUXE PERFUMES STORE', 20, 20);
                
                doc.setFontSize(14);
                doc.setTextColor(0, 0, 0);
                doc.text('INVOICE', 20, 35);
                
                doc.setFontSize(10);
                doc.text('Order ID: <%= order.customOrderId %>', 20, 45);
                doc.text('Date: <%= order.orderDate %>', 20, 50);

                // Add billing address
                doc.setFontSize(12);
                doc.text('Shipping Address:', 20, 70);
                doc.setFontSize(10);
                const address = [
                    '<%= order.address.name %>',
                    '<%= order.address.landMark %>',
                    '<%= order.address.city %>, <%= order.address.state %> <%= order.address.pincode %>',
                    'Phone: <%= order.address.phone %>'
                ];
                let y = 75;
                address.forEach(line => {
                    doc.text(line, 20, y);
                    y += 5;
                });

                // Add items table
                const tableData = [];
                <% order.items.forEach(item => { %>
                    tableData.push([
                        '<%= item.productName || "Product" %>',
                        '<%= item.quantity %>',
                        '₹<%= item.price.toFixed(2) %>',
                        '₹<%= item.totalPrice.toFixed(2) %>'
                    ]);
                <% }); %>

                doc.autoTable({
                    startY: 100,
                    head: [['Item', 'Quantity', 'Price', 'Total']],
                    body: tableData,
                    theme: 'grid',
                    styles: { fontSize: 8 },
                    headStyles: { fillColor: [4, 106, 56] }
                });

                doc.save('invoice-<%= order.customOrderId %>.pdf');
            } catch (error) {
                console.error('Error generating PDF:', error);
                alert('Failed to generate invoice. Please try again.');
            }
        }
    </script>
</body>
</html>