        let timeLeft = 60;
        const timerElement = document.getElementById('timer');
        const resendText = document.querySelector('.resend');
        const otpLoader = document.getElementById('otpLoader');
        let timerInterval = null;

        function startTimer() {
            console.log('Starting timer with timeLeft:', timeLeft);
            if (timerInterval) {
                clearInterval(timerInterval);
                console.log('Cleared existing timer interval');
            }

            timerInterval = setInterval(() => {
                if (timeLeft <= 0) {
                    clearInterval(timerInterval);
                    timerInterval = null;
                    timerElement.textContent = '';
                    resendText.innerHTML = 'Resend OTP <a href="javascript:void(0)" onclick="resendOtp(event)">now</a>';
                    console.log('Timer expired, resend link shown');
                    return;
                }

                const minutes = Math.floor(timeLeft / 60);
                const seconds = timeLeft % 60;
                timerElement.textContent = `in ${minutes}:${seconds < 10 ? '0' : ''}${seconds}`;
                timeLeft--;
                console.log('Timer tick:', timerElement.textContent);
            }, 1000);
        }

        // Start the timer on page load
        if (timerElement) {
            startTimer();
        } else {
            console.error('Timer element not found');
        }

        function resendOtp(event) {
            event.preventDefault();
            console.log('Resend OTP clicked');
            if (otpLoader) {
                otpLoader.style.display = 'flex';
            } else {
                console.error('otpLoader element not found');
            }

            $.ajax({
                type: "POST",
                url: "/resend-otp",
                dataType: 'json',
                success: function (response) {
                    if (otpLoader) {
                        otpLoader.style.display = 'none';
                    }
                    console.log('Resend OTP response:', response);

                    if (response.success) {
                        Swal.fire({
                            title: 'Success!',
                            text: 'A new OTP has been sent to your email.',
                            icon: 'success',
                            confirmButtonText: 'OK',
                            confirmButtonColor: '#3085d6'
                        }).then(() => {
                            timeLeft = 60;
                            timerElement.textContent = 'in 1:00';
                            resendText.innerHTML = 'Resend OTP <span id="timer">in 1:00</span>';
                            startTimer();
                            console.log('Timer reset and started');
                        });
                    } else {
                        Swal.fire({
                            title: 'Error!',
                            text: response.message || 'Failed to resend OTP.',
                            icon: 'error',
                            confirmButtonText: 'Try Again',
                            confirmButtonColor: '#d33'
                        });
                    }
                },
                error: function (xhr, status, error) {
                    if (otpLoader) {
                        otpLoader.style.display = 'none';
                    }
                    console.error('Resend OTP error:', error);
                    Swal.fire({
                        title: 'Server Error',
                        text: 'An error occurred. Please try again later.',
                        icon: 'error',
                        confirmButtonText: 'OK',
                        confirmButtonColor: '#d33'
                    });
                }
            });
        }
