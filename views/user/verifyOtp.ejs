<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Verify OTP for Password Reset</title>
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <link rel="stylesheet" href="/css/verifyOtp.css">
</head>

<body>
    <div class="container">
        <h1>VERIFY YOUR OTP</h1>
        <p>Enter the OTP sent to your email</p>
        <form id="form-submit" onsubmit="return otpValidateForm(event)">
            <input type="text" id="otp" placeholder="Enter OTP" required>
            <button type="submit">VERIFY</button>
        </form>
        <p class="resend">Resend OTP <span id="timer">in 1:00</span></p>
        <div class="footer">
            <a href="#">Help</a>
            <a href="#">Privacy</a>
            <a href="#">Terms</a>
        </div>
    </div>

    <script>
        function otpValidateForm(event) {
            event.preventDefault();

            const otpInput = document.getElementById('otp').value.trim();

            if (!otpInput) {
                Swal.fire({
                    title: 'Error!',
                    text: 'Please enter the OTP.',
                    icon: 'error',
                    confirmButtonText: 'OK',
                    confirmButtonColor: '#d33'
                });
                return false;
            }

            if (!/^\d{4,6}$/.test(otpInput)) {
                Swal.fire({
                    title: 'Error!',
                    text: 'OTP must be a 4 to 6 digit number.',
                    icon: 'error',
                    confirmButtonText: 'OK',
                    confirmButtonColor: '#d33'
                });
                return false;
            }

            $.ajax({
                type: "POST",
                url: "/verifyOtp",
                data: { otp: otpInput },
                dataType: 'json',
                success: function (response) {
                    if (response && response.success) {
                        Swal.fire({
                            title: 'OTP Verified!',
                            text: 'Your OTP has been verified successfully...',
                            icon: 'success',
                            showConfirmButton: false, // No confirmation button
                            timer: 1500, // Auto-close after 3 seconds
                            timerProgressBar: true // Show progress bar for timer
                        }).then(() => {
                            window.location.href =  '/login';
                        });
                    } else {
                    Swal.fire({
                        title: 'Error!',
                        text: response.message || 'Invalid OTP. Please try again.',
                        icon: 'error',
                        confirmButtonText: 'Try Again',
                        confirmButtonColor: '#d33'
                    });
                }
            },
                error: function (xhr, status, error) {
                    Swal.fire({
                        title: 'Server Error',
                        text: 'An error occurred while verifying the OTP. Please try again later.',
                        icon: 'error',
                        confirmButtonText: 'OK',
                        confirmButtonColor: '#d33'
                    });
                }
            });

        return false;
        }

        let timeLeft = 60;
        const timerElement = document.getElementById('timer');
        const resendText = document.querySelector('.resend');

        function startTimer() {
            const timer = setInterval(() => {
                if (timeLeft <= 0) {
                    clearInterval(timer);
                    timerElement.textContent = '';
                    resendText.innerHTML = 'Resend OTP <a href="javascript:void(0)" onclick="resendOtp(event)">now</a>';
                    return;
                }

                const minutes = Math.floor(timeLeft / 60);
                const seconds = timeLeft % 60;
                timerElement.textContent = `in ${minutes}:${seconds < 10 ? '0' : ''}${seconds}`;
                timeLeft--;
            }, 1000);
        }

        startTimer();

        function resendOtp(event) {
            event.preventDefault();
            $.ajax({
                type: "POST",
                url: "/resend-otp",
                dataType: 'json',
                success: function (response) {
                    if (response.success) {
                        Swal.fire({
                            title: 'Success!',
                            text: 'A new OTP has been sent to your email.',
                            icon: 'success',
                            confirmButtonText: 'OK',
                            confirmButtonColor: '#3085d6'
                        }).then(() => {
                            timeLeft = 60;
                            timerElement.textContent = 'in 1:00';
                            resendText.innerHTML = 'Resend OTP <span id="timer">in 1:00</span>';
                            startTimer();
                        });
                    } else {
                        Swal.fire({
                            title: 'Error!',
                            text: response.message || 'Failed to resend OTP.',
                            icon: 'error',
                            confirmButtonText: 'Try Again',
                            confirmButtonColor: '#d33'
                        });
                    }
                },
                error: function (xhr, status, error) {
                    Swal.fire({
                        title: 'Server Error',
                        text: 'An error occurred. Please try again later.',
                        icon: 'error',
                        confirmButtonText: 'OK',
                        confirmButtonColor: '#d33'
                    });
                }
            });
        }
    </script>
</body>

</html>