<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Admin Dashboard</title>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/Chart.js/4.4.1/chart.umd.min.js"></script>
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">
    <link rel="stylesheet" href="/css/adminDashboard.css">
</head>
<body class="dashboard-container">
    <%- include('../../views/partials/admin/header') %>

    <!-- Top Navigation -->
    <div class="top-nav">
        <div class="nav-menu">
            <a href="/admin/dashboard?filter=weekly" class="nav-item <%= currentFilter === 'weekly' ? 'active' : '' %>">Weekly</a>
            <a href="/admin/dashboard?filter=monthly" class="nav-item <%= currentFilter === 'monthly' ? 'active' : '' %>">Monthly</a>
            <a href="/admin/dashboard?filter=yearly" class="nav-item <%= currentFilter === 'yearly' ? 'active' : '' %>">Yearly</a>
        </div>
    </div>

    <!-- Main Content -->
    <div class="main-content">
        <div class="top-bar">
            <div class="page-title">Admin Dashboard</div>
            <button class="ledger-btn" onclick="window.location.href='/admin/dashboard?action=generateLedger'">Generate Ledger</button>
        </div>

        <!-- Stats Cards -->
        <div class="stats-grid">
            <div class="stat-card">
                <div class="stat-header">
                    <div>Revenue</div>
                    <div class="stat-icon"><i class="fas fa-rupee-sign"></i></div>
                </div>
                <div class="stat-value">₹<%= salesData[currentFilter].stats.revenue.toLocaleString('en-IN') %></div>
                <div class="stat-label">Total Revenue</div>
            </div>
            <div class="stat-card">
                <div class="stat-header">
                    <div>Orders</div>
                    <div class="stat-icon"><i class="fas fa-shopping-cart"></i></div>
                </div>
                <div class="stat-value"><%= salesData[currentFilter].stats.orders %></div>
                <div class="stat-label">Total Orders</div>
            </div>
            <div class="stat-card">
                <div class="stat-header">
                    <div>Customers</div>
                    <div class="stat-icon"><i class="fas fa-users"></i></div>
                </div>
                <div class="stat-value"><%= salesData[currentFilter].stats.customers %></div>
                <div class="stat-label">Total Customers</div>
            </div>
            <div class="stat-card">
                <div class="stat-header">
                    <div>Growth</div>
                    <div class="stat-icon"><i class="fas fa-chart-line"></i></div>
                </div>
                <div class="stat-value"><%= salesData[currentFilter].stats.growth %>%</div>
                <div class="stat-label">Sales Growth</div>
            </div>
        </div>

        <!-- Chart Section -->
        <div class="chart-section">
            <div class="chart-card">
                <div class="chart-title"><i class="fas fa-chart-bar"></i> Sales Chart</div>
                <div class="chart-container">
                    <canvas id="salesChart"></canvas>
                </div>
            </div>
            <div class="list-container">
                <div class="list-title"><i class="fas fa-star"></i> Top 10 Products</div>
                <div class="table-wrapper">
                    <table class="data-table">
                        <thead>
                            <tr>
                                <th>Rank</th>
                                <th>Product</th>
                                <th>Sales</th>
                                <th>Revenue</th>
                            </tr>
                        </thead>
                        <tbody>
                            <% topProducts.forEach((product, index) => { %>
                                <tr>
                                    <td><%= index + 1 %></td>
                                    <td><%= product.name %></td>
                                    <td><%= product.sales %></td>
                                    <td>₹<%= product.revenue.toLocaleString('en-IN') %></td>
                                </tr>
                            <% }) %>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>

        <!-- Top Categories and Brands -->
        <div class="chart-section">
            <div class="list-container">
                <div class="list-title"><i class="fas fa-list"></i> Top 10 Categories</div>
                <div class="table-wrapper">
                    <table class="data-table">
                        <thead>
                            <tr>
                                <th>Rank</th>
                                <th>Category</th>
                                <th>Sales</th>
                                <th>Revenue</th>
                            </tr>
                        </thead>
                        <tbody>
                            <% topCategories.forEach((category, index) => { %>
                                <tr>
                                    <td><%= index + 1 %></td>
                                    <td><%= category.name %></td>
                                    <td><%= category.sales %></td>
                                    <td>₹<%= category.revenue.toLocaleString('en-IN') %></td>
                                </tr>
                            <% }) %>
                        </tbody>
                    </table>
                </div>
            </div>
            <div class="list-container">
                <div class="list-title"><i class="fas fa-tags"></i> Top 10 Brands</div>
                <div class="table-wrapper">
                    <table class="data-table">
                        <thead>
                            <tr>
                                <th>Rank</th>
                                <th>Brand</th>
                                <th>Sales</th>
                                <th>Revenue</th>
                            </tr>
                        </thead>
                        <tbody>
                            <% topBrands.forEach((brand, index) => { %>
                                <tr>
                                    <td><%= index + 1 %></td>
                                    <td><%= brand.name %></td>
                                    <td><%= brand.sales %></td>
                                    <td>₹<%= brand.revenue.toLocaleString('en-IN') %></td>
                                </tr>
                            <% }) %>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>

    <script>
        const ctx = document.getElementById('salesChart').getContext('2d');
        const salesChart = new Chart(ctx, {
            type: 'line',
            data: {
                labels: <%- JSON.stringify(salesData[currentFilter].labels) %>,
                datasets: [{
                    label: 'Sales Revenue',
                    data: <%- JSON.stringify(salesData[currentFilter].data) %>,
                    borderColor: '#667eea',
                    backgroundColor: 'rgba(102, 126, 234, 0.2)',
                    borderWidth: 2,
                    tension: 0.4,
                    fill: true,
                }],
            },
            options: {
                responsive: true,
                plugins: {
                    legend: { position: 'top' },
                    tooltip: {
                        callbacks: {
                            label: (context) => `₹${context.parsed.y.toLocaleString('en-IN')}`,
                        },
                    },
                },
                scales: {
                    y: {
                        beginAtZero: true,
                        ticks: {
                            callback: (value) => `₹${value.toLocaleString('en-IN')}`,
                        },
                    },
                    x: {
                        ticks: {
                            maxRotation: 45,
                            minRotation: 45,
                        },
                    },
                },
            },
        });
    </script>
</body>
</html>