        }

        .gauge-container {
            position: relative;
            width: 150px;
            height: 75px;
            margin-bottom: 10px;
        }

        .gauge-bg {
            position: absolute;
            width: 150px;
            height: 75px;
            border-top-left-radius: 75px;
            border-top-right-radius: 75px;
            background-color: #f5f5f5;
            overflow: hidden;
        }

        .gauge-fill {
            position: absolute;
            width: 150px;
            height: 75px;
            border-top-left-radius: 75px;
            border-top-right-radius: 75px;
            background-color: #6fbf73;
            clip-path: polygon(0 100%, 100% 100%, 100% 20%, 0 20%);
        }

        .gauge-percentage {
            position: absolute;
            top: 50%;
            left: 50%;
            transform: translate(-50%, -20%);
            font-size: 24px;
            font-weight: bold;
            color: #6fbf73;
        }

        .server-info {
            display: flex;
            justify-content: space-between;
            width: 100%;
            margin-top: 10px;
            font-size: 12px;
        }

        .server-detail {
