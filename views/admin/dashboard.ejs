            align-items: center;
        }

        .detail-label {
            font-size: 12px;
            color: #777;
        }

        .detail-value {
            font-weight: bold;
        }

        .reviews-section {
            background-color: white;
            padding: 20px;
            border-radius: 8px;
        }

        .review {
            display: flex;
            gap: 15px;
            padding: 15px 0;
            border-bottom: 1px solid #eee;
        }

        .review-avatar {
            width: 50px;
            height: 50px;
            border-radius: 50%;
            overflow: hidden;
            background-color: #e0e0e0;
            display: flex;
            align-items: center;
            justify-content: center;
        }

        .review-avatar img {
            width: 100%;
            height: 100%;
            object-fit: cover;
        }

        .review-content {
            flex-grow: 1;
        }

        .reviewer-name {
            font-weight: bold;
            margin-bottom: 5px;
        }

        .rating {
            color: #ffc107;
            margin-bottom: 5px;
        }

        .review-text {
            font-size: 14px;
            margin-bottom: 10px;
        }

        .review-actions {
            display: flex;
            gap: 10px;
        }

        .action-button {
            border: none;
            background: none;
            color: #777;
            cursor: pointer;
            font-size: 14px;
        }

        .action-button.accept {
            color: #6fbf73;
        }

        .activity-timeline {
            background-color: white;
            padding: 20px;
            border-radius: 8px;
        }

        .timeline {
            position: relative;
            margin-top: 20px;
            padding-left: 30px;
        }

        .timeline::before {
            content: '';
            position: absolute;
            top: 0;
            left: 15px;
            height: 100%;
            width: 2px;
            background-color: #ddd;
        }

        .timeline-item {
            position: relative;
            padding-bottom: 30px;
        }

        .timeline-icon {
            position: absolute;
            left: -30px;
            width: 30px;
            height: 30px;
            border-radius: 50%;
            background-color: #6fbf73;
            display: flex;
            align-items: center;
            justify-content: center;
            color: rgb(0, 0, 0);
        }

        .timeline-content {
            padding-left: 10px;
        }

        .timeline-title {
            font-weight: bold;
            margin-bottom: 5px;
        }

        .timeline-time {
            font-size: 12px;
            color: #777;
        }

        .tooltip {
            position: absolute;
            background-color: #333;
            color: white;
            padding: 5px 10px;
            border-radius: 5px;
            font-size: 14px;
            z-index: 10;
        }

        .user-avatars {
            display: flex;
            margin-top: 20px;
        }

        .user-avatar {
